{
  "name": "shared-configs",
  "description": "Monorepo for shared development configs",
  "packageManager": "pnpm@6.32.2",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "bump": "changeset version",
    "clean:build": "pnpm -rp exec rimraf dist .turbo",
    "clean:node": "pnpm -rp exec rimraf packages/**/node_modules",
    "create:pkg": "esr scripts/plopfile.ts",
    "commit": "git-cz",
    "lint:pkg": "eslint packages --config .eslintrc --fix",
    "push": "git push --follow-tags",
    "test": "turbo run test",
    "release": "changeset publish",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/runtime": "^7.17.2",
    "@changesets/changelog-github": "0.4.3",
    "@changesets/cli": "^2.21.1",
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "@manypkg/cli": "^0.19.1",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "^0.14.25",
    "esbuild-node-externals": "^1.4.1",
    "esbuild-runner": "^2.2.1",
    "eslint": "^8.10.0",
    "execa": "^6.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "plop": "^3.0.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "turbo": "latest"
  }
}
