{
  "name": "shared-configs",
  "description": "Monorepo for shared development configs",
  "packageManager": "pnpm@6.32.2",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "bump": "changeset version",
    "clean:build": "pnpm -rp exec rimraf dist .turbo",
    "clean:node": "pnpm -rp exec rimraf packages/**/node_modules",
    "commit": "git-cz",
    "lint:pkg": "eslint packages --config .eslintrc --fix",
    "push": "git push --follow-tags",
    "test": "turbo run test",
    "release": "changeset publish",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install"
  },
  "dependencies": {
    "@changesets/cli": "^2.21.1",
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "@manypkg/cli": "^0.19.1",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "^0.14.25",
    "esbuild-runner": "^2.2.1",
    "eslint": "^8.10.0",
    "execa": "^6.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "turbo": "latest",
    "ultra-runner": "^3.10.5"
  }
}
